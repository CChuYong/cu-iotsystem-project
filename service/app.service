 [Unit]
 Description=App Service
 After=multi-user.target

 [Service]
 Type=idle
 WorkingDirectory=/home/user/Desktop/monitor
 ExecStart=/usr/bin/python3 -u /home/user/Desktop/monitor/app.py
 StandardOutput=file:/home/user/Desktop/monitor/app.log
 StandardError=file:/home/user/Desktop/monitor/app_error.log


 [Install]
 WantedBy=multi-user.target